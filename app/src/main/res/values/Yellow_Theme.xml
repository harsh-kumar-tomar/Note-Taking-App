<?xml version="1.0" encoding="utf-8"?><!-- res/values/styles.xml -->
<resources>
    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here -->
        <!--        <item name="colorPrimary">@color/primaryBackground</item>-->
        <!--        <item name="colorPrimaryDark">@color/primaryBackground</item>-->
        <!--        <item name="colorAccent">@color/toolbarBackground</item>-->
    </style>

    <style name="ToolbarStyle">
        <item name="android:background">@color/Yellow_Dark</item>
        <item name="titleTextColor">#191919</item>
    </style>

    <style name="DescriptionTextStyle">
        <item name="android:fontFamily">@font/nunito_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="background">@null</item>
        <item name="android:inputType">textMultiLine</item>

    </style>

    <style name="TitleTextStyle">
        <item name="android:fontFamily">@font/varela_font</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:maxLines">1</item>
        <item name="android:maxLength">7</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">normal</item>
        <item name="android:background">@null</item>

    </style>

</resources>
